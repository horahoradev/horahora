server {
    listen       80;
    listen  [::]:80;
    server_name  {{ origin }};
    include /etc/nginx/mime.types;
    default_type video/mp4;

    error_log /dev/stderr debug;
    client_max_body_size 20M;

    resolver 127.0.0.11 valid=10s;

    location /static/images {

    }

    location ~* /otomads/([a-zA-Z0-9\-]*)(\.mp4|) {
        more_set_headers "Content-Type: video/mp4";
        set $backend_service horaminio;
        proxy_pass http://$backend_service:9000/$1;
    }

    location ~* /otomads/([a-zA-Z0-9\-]*)\.thumb {
        set $backend_service horaminio;
        proxy_pass http://$backend_service:9000/$1;
    }

    location /chat {
        set $backend_service web;
        proxy_pass http://$backend_service:5173$request_uri;
    }

    location /assets {
        set $backend_service web;
        proxy_pass http://$backend_service:5173$request_uri;
    }

    location /chat/api/auth/session/login {
        set $backend_service frontapi;
        proxy_pass http://$backend_service:8083/api/revoltlogin;
    }

    location /chat/api/ws {
        set $backend_service events;
        proxy_pass http://$backend_service:9000$request_uri;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
    }

    location /chat/api {
        set $backend_service api;
        proxy_pass http://$backend_service:8000;
        rewrite /chat/api(.*) $1 break;
    }

    location /autumn {
        set $backend_service autumn;
        proxy_pass http://$backend_service:3000$request_uri;
        rewrite /autumn(.*) $1 break;
    }

    location /january {
        set $backend_service january;
        proxy_pass http://$backend_service:7000$request_uri;
        rewrite /january(.*) $1 break;
    }

    location /socket.io {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;

        set $backend_service frontapi;
        proxy_pass http://$backend_service:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location /voso {

    }

    location /api/ {
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_pass_request_headers      on;
        add_header Cache-Control 'no-store';
        set $backend_service frontapi;
        proxy_pass http://$backend_service:8083$request_uri;
        proxy_request_buffering off;
    }

    location /ws {
        set $backend_service stomp_proxy;
        proxy_pass http://$backend_service:15674/ws;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
    }

    location /_next/webpack-hmr {
        set $backend_service react_app;
        proxy_pass http://$backend_service:3000/_next/webpack-hmr;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
    }

    location / {
        set $backend_service react_app;
        proxy_pass http://$backend_service:3000$request_uri;
    }
}
